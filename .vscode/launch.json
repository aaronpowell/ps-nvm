    "version": "0.2.0",
    "configurations": [
      {
        "type": "PowerShell",
        "request": "launch",
        "name": "PowerShell Launch Current File w/Args Prompt",
        "script": "${file}",
        "args": [
          "${command:SpecifyScriptArgs}"
        ],
        "cwd": "${file}"
      },
      {
        "type": "PowerShell",
        "request": "launch",
        "name": "PowerShell Launch Current File",
        "script": "${file}",
        "args": [],
        "cwd": "${file}"
      },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Pester Tests",
            "script": "Invoke-Pester",
            "args": [],
            "cwd": "${workspaceRoot}"
        }
    ]
}
